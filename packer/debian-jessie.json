
{
    "variables": {
        "version": "1.1.0",
        "iso_url": "http://cdimage.debian.org/debian-cd/8.7.1/amd64/iso-cd/debian-8.7.1-amd64-netinst.iso",
        "iso_sha512": "534795785d2706e64e3a4dff9648fd0302a1272c668a99a81ba3a984695986ac814d8193c5335bd13dce0592fc470eebe9fc4a6c9991f87a6686329a667ac30d",
        "cpus": "1",
        "memory": "512",
        "disk_size": "40960"
    },
    "builders": [
        {
            "type": "virtualbox-iso",
            "boot_command": [
                "<esc><wait>",
                "install ",
                "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed_jessie.cfg ",
                "debian-installer=en_US ",
                "auto ",
                "locale=en_US ",
                "kbd-chooser/method=us ",
                "keyboard-configuration/xkb-keymap=us ",
                "netcfg/get_hostname={{.Name}} ",
                "netcfg/get_domain=vagrantup.com ",
                "netcfg/hostname={{.Name}} ",
                "fb=false ",
                "debconf/frontend=noninteractive ",
                "console-setup/ask_detect=false ",
                "console-keymaps-at/keymap=us ",
                "<enter><wait>"
            ],
            "boot_wait": "10s",
            "disk_size": "{{user `disk_size`}}",
            "guest_os_type": "Debian_64",
            "hard_drive_interface": "sata",
            "headless": true,
            "http_directory": "http",
            "iso_checksum": "{{user `iso_sha512`}}",
            "iso_checksum_type": "sha512",
            "iso_url": "{{user `iso_url`}}",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -hP now",
            "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
            "virtualbox_version_file": ".vbox_version",
            "vm_name": "vagrant-debian-jessie",
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
                ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
            ]
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "output": "build/debian-jessie_{{user `version`}}_{{.Provider}}.box",
            "only": ["virtualbox-iso"]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
            "scripts": [
                "scripts/update.sh",
                "scripts/grub.sh",
                "scripts/sshd.sh",
                "scripts/sudoers.sh",
                "scripts/vagrant.sh",
                "scripts/vmtools.sh",
                "scripts/cleanup.sh",
                "scripts/minimize.sh"
            ],
            "only": ["virtualbox-iso"]
        }
    ]
}
